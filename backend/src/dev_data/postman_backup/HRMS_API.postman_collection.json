          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"EMP021\",\n  \"name\": \"New Employee\",\n  \"email\": \"new.employee@hrms.com\",\n  \"department\": \"IT\",\n  \"password\": \"password123\",\n  \"passwordConfirm\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/employees",
              "host": ["{{base_url}}"],
